<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_circle_corner_shape"
    android:paddingBottom="16dp"
    android:orientation="vertical" >
    <ImageView android:id="@+id/iv_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:layout_marginRight="10dp"
        android:background="@drawable/like"/>
    <TextView android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:text="Mrs_wind"/>
    <TextView android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:text="下颚角手术"/>
    <com.android.volley.toolbox.NetworkImageView  
        android:id="@+id/niv_photo"  
        android:layout_width="match_parent"  
        android:layout_height="160dp"
        android:layout_below="@id/tv_item"
        android:background="@drawable/hp1" />
    <TextView android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/niv_photo"
        android:layout_margin="16dp"
        android:text="下颚角手术让我的平面模特生涯更精彩"/>
    <View android:id="@+id/view_line" 
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/tv_comment"
        android:background="@drawable/h_line"/>
    <TextView android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_alignParentLeft="true"
        android:layout_margin="26dp"
        android:drawableLeft="@drawable/num_comment"
        android:drawablePadding="10dp"
        android:text="25"/> 
	<TextView android:id="@+id/tv_favorites_num"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/view_line"
	    android:layout_alignParentRight="true"
	    android:layout_margin="26dp"
	    android:drawableLeft="@drawable/num_love_checked"
	    android:drawablePadding="10dp"
	    android:text="117"/>
</RelativeLayout>
