<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView 
        android:padding="15dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cicle_logo"/>
    <RelativeLayout 
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:maxLength="10"
            style="@style/list_item_title"
            android:text="标题"/>
        <TextView 
            android:layout_marginTop="5dp"
            android:id="@+id/item_lab_tv"
            android:layout_below="@+id/item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/list_item_des"
            android:text="标题"/>
        <TextView 
            android:layout_marginLeft="15dp"
            android:id="@+id/item_desc_tv"
            android:layout_toRightOf="@+id/item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/list_item_lab"
            android:text="标签"/>
    </RelativeLayout>
	<ImageView 
	    android:padding="15dp"
	    android:layout_gravity="center_vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/icon_arrow"/>
</LinearLayout>
